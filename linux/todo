### ZSH ###

sudo apt install -y zsh
# make zsh default
chsh -s /bin/zsh
# create symlink
ln -s ~/sources/config-files/linux/.zshrc ~/.zshrc

### TMUX ###

sudo apt install -y tmux
# create symlink
ln -s ~/sources/config-files/tmux/.tmux.conf ~/.tmux.conf

### DEPENDENCIES ###

sudo apt install -y ripgrep
sudo apt install -y nodejs
sudo apt install -y python3.8

### VIM ###

sudo apt install -y nvim
# create symlink
ln -s ~/sources/config-files/vim/nvim ~/.config/nvim

### FIX CHROME ISSUE AFTER SLEEP ###

# add the arguments in the chrome menu launcher:
--use-gl=desktop
